<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.augustana.javaturtles.sketchsend" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".UseParse"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainMenu"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ContactList"
            android:label="@string/title_activity_contact_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".InboxList"
            android:label="@string/title_activity_inbox_list"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".DrawActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_draw" >
        </activity>
        <activity
            android:name=".ReceivedDrawing"
            android:label="@string/title_activity_received_drawing"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
